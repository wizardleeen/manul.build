---
import { getLangFromUrl, useTranslations, type Key } from "../i18n/ui"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

const features = [
    {titleKey: 'feature1.title', 'contentKey': 'feature1.content'},
    {titleKey: 'feature2.title', 'contentKey': 'feature2.content'},
    {titleKey: 'feature3.title', 'contentKey': 'feature3.content'},
] satisfies Array<{titleKey: Key, contentKey: Key}>
---

<section class="dark:bg-gray-700">
    <div class="max-w-content mx-auto px-4 pt-8 pb-16">
        <h2 class="text-3xl mb-4 font-bold">{t('why.manul')}</h2>
        <div class="grid lg:grid-cols-3 gap-12">
            {
                features.map(feature => (
                    <div>
                        <h3 class="text-2xl xl mb-4">{t(feature.titleKey)}</h3>
                        <p>{t(feature.contentKey)}</p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
