---
import { Icon } from 'astro-icon/components'
import LangPicker from '../components/LangPicker.astro'
import type { Key } from '../i18n/ui'
import { getLangFromUrl } from '../i18n/ui'
import { useTranslations } from '../i18n/ui'
import ThemeScript from '../components/ThemeScript.astro'
import ThemeToggle from '../components/ThemeToggle.astro'
import '../styles/global.css'

const {title} = Astro.props

const lang = getLangFromUrl(Astro.url)

const menus = [
    {labelKey: 'menu.doc', url: 'https://docs.manul-lang.org'},
    {labelKey: 'menu.blog', url: '/blog'},
] satisfies Array<{labelKey: Key, url: string}>

const t = useTranslations(lang)
---
<html>
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width"/>
        <ThemeScript/>
        <link rel="icon" type="image/svg+xml" href="/manul.svg" />
        <title>{title}</title>
    </head>
    <body class="min-h-screen flex flex-col dark:bg-gray-800 dark:text-white">
        <nav class="border-b border-gray-950/5 dark:border-b dark:border-white/10">
            <div class="flex py-4 px-4 items-center justify-between">
                <div class="flex gap-8 lg:gap-16 items-center">
                    <a class="flex items-center gap-4" href={`${lang === 'en' ? '/' : `/${lang}`}`}>
                        <Icon name="manul" class="size-15"></Icon>
                        <h1 class="text-4xl">{t('manul')}</h1>
                    </a>
                    <ul class="grow flex justify-center gap-4 md:gap-8">
                        <!-- <li class="text-xl underline">
                            <a id="install-link" href={`/${lang}/blog/install`}>{t('menu.install')}</a>
                        </li> -->
                        {
                            menus.map(menu => (
                                <li class="text-xl underline">
                                    <a href={`/${lang}${menu.url}`}>{t(menu.labelKey)}</a>
                                </li>
                            ))
                        }
                    </ul>
                </div>
                <div class="flex gap-6 items-center">
                    <a aria-label="GitHub repository" href="https://github.com/manul-language/manul">
                        <svg viewBox="0 0 20 20" class="size-5 fill-black/40 dark:fill-gray-400"><path d="M10 0C4.475 0 0 4.475 0 10a9.994 9.994 0 006.838 9.488c.5.087.687-.213.687-.476 0-.237-.013-1.024-.013-1.862-2.512.463-3.162-.612-3.362-1.175-.113-.287-.6-1.175-1.025-1.412-.35-.188-.85-.65-.013-.663.788-.013 1.35.725 1.538 1.025.9 1.512 2.337 1.087 2.912.825.088-.65.35-1.088.638-1.338-2.225-.25-4.55-1.112-4.55-4.937 0-1.088.387-1.987 1.025-2.688-.1-.25-.45-1.274.1-2.65 0 0 .837-.262 2.75 1.026a9.28 9.28 0 012.5-.338c.85 0 1.7.112 2.5.337 1.912-1.3 2.75-1.024 2.75-1.024.55 1.375.2 2.4.1 2.65.637.7 1.025 1.587 1.025 2.687 0 3.838-2.337 4.688-4.562 4.938.362.312.675.912.675 1.85 0 1.337-.013 2.412-.013 2.75 0 .262.188.574.688.474A10.016 10.016 0 0020 10c0-5.525-4.475-10-10-10z"></path></svg>
                    </a>
                    <LangPicker/>
                </div>
            </div>
        </nav>
        <main class="grow w-full">
            <slot/>
        </main>
        <footer class="py-8 bg-gray-800 text-gray-200">
            <div class="max-w-content mx-auto px-4">
                <div class="flex justify-between items-center mb-6">
                    <ul class="flex divide-x divide-white/30 items-center">
                        <li class="px-4">
                            <a href="https://docs.manul-lang.org">{t('menu.doc')}</a>
                        </li>
                        <li class="px-4">
                            <a href=`/${lang}/blog`>{t('menu.blog')}</a>
                        </li>
                        <li class="px-4">
                            <a href="https://github.com/manul-language/manul">Github</a>
                        </li>
                    </ul>
                    <div class="flex gap-4">
                        <ThemeToggle/>
                        <LangPicker/>
                    </div>
                </div>
                <div class="flex gap-4 px-4 items-center">
                    <Icon name="manul" class="size-5"></Icon>
                    <p>
                        <a href="https://raw.githubusercontent.com/manul-language/manul/refs/heads/main/LICENSE">{t('apachev2.license')} &copy; 2026</a>
                    </p>
                </div>
            </div>
        </footer>
    </body>
</html>

<script is:inline define:vars={{lang}}>
    const isWindows = navigator.userAgent.includes("Windows");
    if (isWindows) {
        const installLink = document.getElementById("install-link");
        if (installLink) {
            installLink.href = `/${lang}/blog/install-win`
        }
    }
</script>